{
  "name": "react-native-marked",
  "version": "1.6.12",
  "description": "Markdown renderer for React Native powered by marked.js",
  "main": "dist/commonjs/index",
  "module": "dist/module/index",
  "types": "dist/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "cpp",
    "react-native-marked.podspec",
    "!dist/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "rome check ./",
    "format": "rome format ./ --write",
    "build": "bob build",
    "prepare": "yarn build",
    "release": "yarn build && release-it",
    "test": "jest --passWithNoTests",
    "test:updateSnapshot": "jest --updateSnapshot",
    "reassure": "reassure"
  },
  "keywords": [
    "react-native",
    "markdown",
    "react-native markdown"
  ],
  "repository": "https://github.com/gmsgowtham/react-native-marked",
  "author": "Gowtham G <webappsbygowtham@gmail.com> (https://github.com/gmsgowtham)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gmsgowtham/react-native-marked/issues"
  },
  "homepage": "https://github.com/gmsgowtham/react-native-marked#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@commitlint/config-conventional": "17.4.3",
    "@evilmartians/lefthook": "1.2.9",
    "@release-it/conventional-changelog": "5.1.1",
    "@testing-library/jest-native": "5.4.1",
    "@testing-library/react-native": "11.5.2",
    "@types/jest": "29.4.0",
    "@types/marked": "4.0.8",
    "@types/node": "^18.11.18",
    "@types/react": "18.0.28",
    "@types/react-native": "0.71.3",
    "commitlint": "17.4.3",
    "danger": "11.2.3",
    "jest": "29.4.2",
    "jest-environment-jsdom": "29.4.2",
    "metro-react-native-babel-preset": "0.75.0",
    "pod-install": "0.1.38",
    "react": "18.1.0",
    "react-native": "0.71.3",
    "react-native-builder-bob": "0.20.3",
    "react-test-renderer": "18.1.0",
    "reassure": "0.7.1",
    "release-it": "15.6.0",
    "rome": "11.0.0",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "react": "^16.8.6 || ^17.0.0 || ^18.0.0",
    "react-native": ">=0.60.0"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/examples/*/node_modules",
      "<rootDir>/dist/"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "todo",
          "bump"
        ]
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "web": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@jsamr/counter-style": "2.0.2",
    "@jsamr/react-native-li": "2.3.1",
    "marked": "4.2.12",
    "react-native-fit-image": "1.5.5"
  }
}
