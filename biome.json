{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noRenderReturnValue": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "info"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"includes": ["src/**", "examples/**", "dangerfile.ts"]
	},
	"javascript": {
		"jsxRuntime": "reactClassic"
	}
}
